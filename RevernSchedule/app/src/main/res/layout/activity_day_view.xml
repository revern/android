<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/fab_material_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/day_color_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.revernschedule.DayViewActivity">

    <TextView
        android:id="@+id/day_name_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/fab_material_grey_900"
        android:layout_marginRight="64dp"
        android:textSize="36dp"/>
    <TextView
        android:id="@+id/day_note_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="24dp"/>
    <ListView
        android:id="@+id/day_action_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"></ListView>

</LinearLayout>
</RelativeLayout>