<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/fab_material_white"
    tools:context="com.example.revernschedule.ChooseDayActivity">

    <TextView android:text="Choose Days"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/every_day_button"
        android:text="Everyday"
        android:textSize="24dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/cyan_300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/one_day_button"
        android:text="Only one day"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        android:gravity="center"
        android:background="@color/cyan_300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/week_day_button"
        android:text="One day per every week"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        android:gravity="center"
        android:background="@color/cyan_300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/month_day_button"
        android:text="One day per every month"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        android:gravity="center"
        android:background="@color/cyan_300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/year_day_button"
        android:text="One day per every year"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        android:gravity="center"
        android:background="@color/cyan_300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
