<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/fab_material_white"
    tools:context="com.example.revernschedule.ColorChooseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <Button
                android:id="@+id/redB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_red_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pinkB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_pink_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/purpleB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_purple_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/deepPurpleB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_deep_purple_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <Button
                android:id="@+id/blueGreyB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_blue_grey_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/cyanB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_cyan_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/blueB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_blue_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/indigoB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_indigo_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <Button
                android:id="@+id/tealB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_teal_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/greenB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_green_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/lightGreenB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_light_green_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/limeB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_lime_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <Button
                android:id="@+id/deepOrangeB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_deep_orange_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/orangeB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_orange_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/amberB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_amber_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/yellowB"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_yellow_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <Button
                android:id="@+id/grey100B"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/grey_100"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/grey500B"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_blue_grey_500"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/grey700B"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/grey_700"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/grey900B"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:background="@color/fab_material_blue_grey_900"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
